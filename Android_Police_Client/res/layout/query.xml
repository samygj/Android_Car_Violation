<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout2"
		android:layout_height="fill_parent" android:stretchColumns="1">
		<TableRow>
			<TextView android:text="Plate Number"
				android:layout_height="wrap_content" android:layout_width="wrap_content" />
			<EditText android:text="" android:id="@+id/plateEditText"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</TableRow>
		<TableRow>
			<Button android:text="Search" android:id="@+id/searchButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content" 
				android:gravity="center"/>
		</TableRow>
	</TableLayout>
	
</LinearLayout>
